{
  "name": "bearbuddy-core",
  "displayName": "BearBuddy Core",
  "description": "Your friendly coding companion for VSCode - Free Core Edition",
  "version": "1.0.0",
  "publisher": "PCWProps",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bearbuddy-core.helloWorld",
        "title": "BearBuddy: Hello World"
      },
      {
        "command": "bearbuddy-core.showInfo",
        "title": "BearBuddy: Show Info"
      }
    ],
    "configuration": {
      "title": "BearBuddy Core",
      "properties": {
        "bearbuddy.enableTelemetry": {
          "type": "boolean",
          "default": true,
          "description": "Enable anonymous telemetry to help improve BearBuddy"
        },
        "bearbuddy.showWelcomeMessage": {
          "type": "boolean",
          "default": true,
          "description": "Show welcome message on extension activation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "node ../../config/build/bundler.mjs --production",
    "dev": "node ../../config/build/bundler.mjs --watch",
    "watch": "node ../../config/build/bundler.mjs --watch",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint src --ext .ts",
    "test": "echo \"Tests not yet implemented\" && exit 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/logger": "workspace:*",
    "@repo/shared-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PCWProps/Dev-Apps-And-Extensions.git",
    "directory": "extensions/core-extension"
  },
  "bugs": {
    "url": "https://github.com/PCWProps/Dev-Apps-And-Extensions/issues"
  },
  "homepage": "https://pcwprops.github.io/Dev-Apps-And-Extensions"
}
