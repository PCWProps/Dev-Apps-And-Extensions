{
  "name": "bearbuddy-pro",
  "displayName": "BearBuddy Pro",
  "description": "Your friendly coding companion for VSCode - Professional Edition with advanced features",
  "version": "0.1.0",
  "publisher": "PCWProps",
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bearbuddy-pro.helloWorld",
        "title": "BearBuddy Pro: Hello World"
      },
      {
        "command": "bearbuddy-pro.advancedFeature",
        "title": "BearBuddy Pro: Advanced Feature"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "echo \"No linting configured yet\" && exit 0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.27.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PCWProps/extensions-dev.git",
    "directory": "BearBuddy/BearBuddy-Pro"
  },
  "bugs": {
    "url": "https://github.com/PCWProps/extensions-dev/issues"
  },
  "homepage": "https://pcwprops.github.io/extensions-dev/BearBuddy"
}
